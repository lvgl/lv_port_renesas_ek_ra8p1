<component>
    <previews>
        <preview style_bg_color="0x222222" width="100" height="100"/>
    </previews>

    <api>
        <prop name="src" type="image" default="img_bell"></prop>
    </api>

    <consts>
        <int name="size" value="14"/>
    </consts>
    
    <styles>
        <style name="main" width="#size" height="#size" image_recolor_opa="255" image_recolor="0xffffff"
        />
        <style name="off" image_recolor_opa="128" image_recolor="0xffffff" />
    </styles>
    
    <view extends="lv_image" src="$src" styles="main off:disabled" inner_align="stretch"></view> 
</component>
